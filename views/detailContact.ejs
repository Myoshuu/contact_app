<div class="container mt-3">
  <div class="col-md-8">
    <h2>Detail Contacts</h2>

    <!-- If contact not found -->
    <% if (!contact) { %>
    <svg xmlns="http://www.w3.org/2000/svg" style="display: none">
      <symbol
        id="exclamation-triangle-fill"
        fill="currentColor"
        viewBox="0 0 16 16"
      >
        <path
          d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"
        />
      </symbol>
    </svg>

    <div class="alert alert-danger d-flex align-items-center" role="alert">
      <svg
        class="bi flex-shrink-0 me-2"
        width="24"
        height="24"
        role="img"
        aria-label="Danger:"
      >
        <use xlink:href="#exclamation-triangle-fill" />
      </svg>
      <div class="ml-3">Contact not Found!! <a href="/contact">Back</a></div>
    </div>
    <!-- End If -->

    <!-- If contact found -->
    <% } else {%>
    <div class="card mt-3" style="width: 18rem">
      <div class="card-body">
        <h5 class="card-title"><%= contact.nama %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= contact.nohp %></h6>
        <p class="card-text"><%= contact.email %></p>
        <!-- Delete Button -->
        <a
          href="/contact/edit/<%= contact.nama %>"
          class="btn btn-success badge"
        >
          <i class="bi bi-pencil"></i> Edit</a
        >
        <a
          href="/contact/delete/<%= contact.nama %>"
          class="btn btn-danger badge"
          onclick="return confirm('are you sure?')"
        >
          <i class="bi bi-trash"></i> Delete</a
        >
        <a href="/contact" class="card-link d-block mt-2">&laquo; Back</a>
      </div>
      <% } %>
    </div>
  </div>
</div>
